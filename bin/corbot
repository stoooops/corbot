#!/usr/bin/env bash

set -o errexit
set -o nounset
set -o pipefail

REPO_DIR="$(cd "$(dirname "$(readlink -f "${BASH_SOURCE[0]}")")"/.. && pwd)"

export PYTHONPATH=${REPO_DIR}

main() {
  case "${1}" in
    hello)
      ${REPO_DIR}/bin/corbot-hello
      ;;
    *)
      echo "Usage: corbot todo"
      exit 1
      ;;
  esac
}

main "$@"
