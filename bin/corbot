#!/usr/bin/env bash

set -o errexit
set -o nounset
set -o pipefail

SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" >/dev/null 2>&1 && pwd )"
REPO_DIR=$(realpath "${SCRIPT_DIR}/..")

export PYTHONPATH=${REPO_DIR}

main() {
  case "${1}" in
    hello)
      ${REPO_DIR}/bin/corbot-hello
      ;;
    *)
      echo "Usage: corbot hello"
      exit 1
      ;;
  esac
}

main "$@"
